import math

def calculate_factorial(n):
    """Вычисляет факториал числа n с использованием math.factorial."""
    return math.factorial(n)

def get_positive_integer():
    """Запрашивает у пользователя положительное целое число с проверкой ввода."""
    while True:  # Бесконечный цикл, пока ввод не будет корректным
        try:
            user_input = input("Введите положительное целое число: ")
            number = int(user_input)
            
            if number < 0:
                print("Ошибка: Число должно быть положительным. Попробуйте снова.")
                continue  # Переход к следующей итерации цикла
            elif number == 0:
                print("Факториал 0 равен 1.")
                return 0  # Можно обработать 0 отдельно
                
            return number  # Корректный ввод — выход из цикла
            
        except ValueError:
            print("Ошибка: Введите целое число (например, 5, 10, 42).")

def main():
    print("Программа вычисления факториала.")
    number = get_positive_integer()  # Получаем корректное число
    result = calculate_factorial(number)
    print(f"Факториал числа {number} равен: {result}")

if __name__ == "__main__":
    main()
